options {
        directory "/var/cache/bind";

        listen-on { 127.0.0.1; 192.168.5.1; };
        allow-query { localhost; 192.168.5.0/24; };

        recursion yes;
        forwarders {
                1.1.1.1;
                8.8.8.8;
                8.8.4.4;
        };

        listen-on-v6 { none; };
        dnssec-validation auto;
};